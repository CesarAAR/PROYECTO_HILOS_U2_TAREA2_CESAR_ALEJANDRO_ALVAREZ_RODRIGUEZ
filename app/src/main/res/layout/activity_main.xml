<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="346dp"
        android:layout_height="325dp"
        app:srcCompat="@drawable/imagen7" />

    <Button
        android:id="@+id/buttonInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciale mijo" />

    <Button
        android:id="@+id/buttonPausa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perate / Sigue le" />

    <Button
        android:id="@+id/buttonTerminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ya fue mucho" />

    <Button
        android:id="@+id/buttonReiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A ver otra vez" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Estado: " />

</LinearLayout>